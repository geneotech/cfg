#!/usr/bin/env zsh

HOME_CFG_DIR=$1
RELINKED_ENTITY=$2

RELINKED_ENTITY_DIRNAME=$(dirname $RELINKED_ENTITY)
RELINKED_ENTITY_IN_CFG=$(realpath "$HOME_CFG_DIR/$RELINKED_ENTITY")

rm -rf $RELINKED_ENTITY
echo "Removed $RELINKED_ENTITY"

cd $RELINKED_ENTITY_DIRNAME
echo "Cd-ed $RELINKED_ENTITY_DIRNAME"

ln -s $RELINKED_ENTITY_IN_CFG
echo "Linked $RELINKED_ENTITY_IN_CFG \n"
